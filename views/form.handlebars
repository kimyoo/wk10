<h1>Workout Table</h1>

	<!-- Add New Data Row -->

<form action="/addrow" method="get">
        <label for="nameId">Enter name of the exercise:</label>
        <input type="text" name="name" id="nameId">
	  <br>
	  <br>
        <label for="repId">Enter the number of repetition:</label>
        <input type="text" name="rep" id="repId">
	  <br>
	  <br>
      <fieldset>
        <label for="weightId">Enter the weight of the weights used:</label>
        <input type="text" name="weight" id="weightId">
      </fieldset>
	  <br>
	  <br>
      <fieldset>
        <label for="dateId">Enter the date of the exercise performed:</label>
        <input type="text" name="date" id="dateId">
      </fieldset>
	  <br>
	  <br>
      <fieldset>
        <label for="measureId">What is the measurement of weight (lb or kg):</label>
        <input type="text" name="measure" id="measureId">
      </fieldset>	
